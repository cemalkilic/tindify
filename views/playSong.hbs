<!--Player page for one track, from which you can add or skip the track -->

<img id="albumCover" src="{{albumCover}}"/>
<h1>
	{{trackName}}
</h1>
<h2>
  {{artistName}}
</h2>
<button id="skipSong">Skip</button>
<button id="addSong">Add</button>
<br>
<div id="player">
  <audio controls autoplay>
    <source src={{previewURL}} type="audio/mpeg">
  </audio>
</div>
<br>
<span id="arrowHelp">
	<h4>
		(Or press LEFT to skip, and RIGHT to add)
	</h4>
</span>
<span id="playlistInfo">
	<h4>
		Currently playing recommended tracks based on the songs from '{{playlistName}}'.
		<a href="getRandomPlaylist" id="changePlaylist">
			(Want a different sound from another playlist?)
		</a>
	</h4>
</span>
<hr>
<div id="playlists">
    <h4>
        Or simply, select a playlist to play similar songs from?
        <ul class="playlists_list">
            {{#each playlists}}
                <li><a href="getTracks/{{this.id}}">{{this.name}}</a></li>
            {{/each}}
        </ul>
    </h4>

</div>



<script type="text/javascript" src="javascripts/swipe.js"></script>
